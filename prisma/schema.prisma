generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum ActivityType {
    Kuliah
    Praktikum
    Seminar
    Lainnya
}

enum ApprovedStatus {
    Accepted
    Rejected
    Pending
}

enum RoleType {
    Admin
    User
}

model KegiatanLab {
    id                     Int            @id @default(autoincrement())
    jenis_kegiatan         ActivityType
    nama_kegiatan          String
    nama_pemohon           String
    email_pemohon          String
    tanggal                DateTime
    start_time             String
    end_time               String
    dosen_penanggung_jawab String
    approved               ApprovedStatus
    created_at             DateTime       @default(now())
    updated_at             DateTime       @updatedAt
}

model User {
    id         Int      @id @default(autoincrement())
    email      String   @unique
    role       RoleType
    created_at DateTime @default(now())
}
